<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michal.vycvik.Fragments.LoginFragment"
    android:background="@color/md_white_1000"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayLight"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:background="@color/md_white_1000"
            android:padding="20dp"
            android:src="@drawable/vycviklogo2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/light_rounded_background"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/loginfield_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColorHint="@color/md_white_1000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorTextLight"
                    android:hint="Login"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorTextLight" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwrdfield_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/md_white_1000">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorTextLight"
                    android:hint="Haslo"
                    android:inputType="textPassword"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorTextLight" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:textSize="17sp"
                android:textStyle="italic"
                android:background="@drawable/blue_rounded_background"
                android:text="Zaloguj"
                android:textAllCaps="false"
                android:textColor="@color/colorTextLight" />


            <TextView
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="12sp"
                android:text="Zapomniałem hasła"
                android:textColor="@color/colorTextLight" />

            <TextView
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12sp"
                android:text="Nie posiadasz jeszcze konta? Załóż je teraz! "
                android:textColor="@color/colorTextLight" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
